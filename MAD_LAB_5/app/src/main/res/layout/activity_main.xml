<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">

    <!-- Center the EditText horizontally and vertically -->
    <EditText android:id="@+id/seconds_input" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="Enter seconds" android:inputType="number" android:layout_centerInParent="true" />

    <!-- Center the Button below the EditText -->
    <Button android:id="@+id/set_alarm_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Set Alarm" android:layout_below="@id/seconds_input" android:layout_centerHorizontal="true" android:layout_marginTop="16dp" />

</RelativeLayout>
